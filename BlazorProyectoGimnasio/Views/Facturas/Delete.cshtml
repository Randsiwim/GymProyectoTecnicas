@model Gimnasio.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<h2>¿Estás seguro de que deseas eliminar esta factura?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-2">Monto:</dt>
        <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-2">Detalle:</dt>
        <dd class="col-sm-10">@Model.Detalle</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="FacturaID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
