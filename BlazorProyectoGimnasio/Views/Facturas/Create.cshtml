@model Gimnasio.Models.Factura

@{
    ViewData["Title"] = "Crear Factura";
}

<h2>Crear Nueva Factura</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="UsuarioID" class="form-label">Cliente</label>
        <select asp-for="UsuarioID" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "UsuarioID", "Nombre"))">
            <option value="">Seleccione un Cliente</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="Monto" class="form-label">Monto</label>
        <input type="number" step="0.01" asp-for="Monto" class="form-control" placeholder="Ejemplo: 100.00" required />
    </div>
    <div class="mb-3">
        <label for="Detalle" class="form-label">Detalle</label>
        <textarea asp-for="Detalle" class="form-control" rows="3" placeholder="Descripción de la factura"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
