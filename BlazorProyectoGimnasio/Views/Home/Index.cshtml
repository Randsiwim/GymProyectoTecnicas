@{
    ViewData["Title"] = "Panel de Administración";
}

<h2 class="my-4 text-center">Panel de Administración</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Clases</h5>
                    <p class="card-text">Gestiona todas las clases.</p>
                    <a asp-controller="Clases" asp-action="Index" class="btn btn-primary">Ir a Clases</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Facturas</h5>
                    <p class="card-text">Gestiona las facturas.</p>
                    <a asp-controller="Facturas" asp-action="Index" class="btn btn-primary">Ir a Facturas</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Inventario</h5>
                    <p class="card-text">Gestiona el inventario.</p>
                    <a asp-controller="Inventario" asp-action="Index" class="btn btn-primary">Ir a Inventario</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text">Gestiona los usuarios.</p>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-primary">Ir a Usuarios</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Membresías</h5>
                    <p class="card-text">Gestiona las membresías.</p>
                    <a asp-controller="Membresias" asp-action="Index" class="btn btn-primary">Ir a Membresías</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reservas</h5>
                    <p class="card-text">Gestiona las reservas.</p>
                    <a asp-controller="Reservas" asp-action="Index" class="btn btn-primary">Ir a Reservas</a>
                </div>
            </div>
        </div>
    </div>

    <h3 class="my-4 text-center">Reportes</h3>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reporte Contable</h5>
                    <p class="card-text">Visualiza el reporte contable.</p>
                    <a asp-controller="Reportes" asp-action="ReporteContable" class="btn btn-primary">Ir a Reporte</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reporte de Matrícula</h5>
                    <p class="card-text">Visualiza el reporte de matrículas.</p>
                    <a asp-controller="Reportes" asp-action="ReporteMatricula" class="btn btn-primary">Ir a Reporte</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Clases Populares</h5>
                    <p class="card-text">Consulta las clases populares.</p>
                    <a asp-controller="Reportes" asp-action="ReporteClasesPopulares" class="btn btn-primary">Ir a Reporte</a>
                </div>
            </div>
        </div>
    </div>
</div>
