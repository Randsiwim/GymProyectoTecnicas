@model Gimnasio.Models.Clase

@{
    ViewData["Title"] = "Editar Clase";
}

<h2>Editar Clase</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ClaseID" />
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre de la Clase</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Horario" class="form-label">Horario</label>
        <input asp-for="Horario" type="time" class="form-control"
               value="@Model.Horario.ToString(@"hh\:mm")" />
    </div>

    <div class="mb-3">
        <label for="Cupo" class="form-label">Cupo Máximo</label>
        <input asp-for="Cupo" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EntrenadorID" class="control-label">Entrenador</label>
        <select asp-for="EntrenadorID" class="form-control" asp-items="@(ViewData["EntrenadorID"] as SelectList)">
            <option value="">-- Seleccione un Entrenador --</option>
        </select>
        <span asp-validation-for="EntrenadorID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
