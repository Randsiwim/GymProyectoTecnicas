@model IEnumerable<Gimnasio.Models.Clase>

<h2>Gestionar Clases</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Clase</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Horario</th>
            <th>Cupo</th>
            <th>Entrenador</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clase in Model)
        {
            <tr>
                <td>@clase.ClaseID</td>
                <td>@clase.Nombre</td>
                <td>@clase.Horario.ToString(@"hh\:mm")</td>
                <td>@clase.Cupo</td>
                <td>@(clase.Entrenador?.Nombre ?? "Sin entrenador")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@clase.ClaseID" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@clase.ClaseID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
