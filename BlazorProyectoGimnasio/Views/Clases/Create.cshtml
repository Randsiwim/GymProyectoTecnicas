@model Gimnasio.Models.Clase

<h2>Crear Nueva Clase</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Horario" class="control-label">Horario</label>
        <input asp-for="Horario" type="time" class="form-control" required />
        <span asp-validation-for="Horario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cupo" class="control-label">Cupo Máximo</label>
        <input asp-for="Cupo" type="number" class="form-control" required />
        <span asp-validation-for="Cupo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntrenadorID" class="control-label">Entrenador</label>
        <select asp-for="EntrenadorID" class="form-control" asp-items="@(new SelectList(ViewBag.Entrenadores, "UsuarioID", "Nombre"))">
            <option value="">-- Seleccione un Entrenador --</option>
        </select>
        <span asp-validation-for="EntrenadorID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
