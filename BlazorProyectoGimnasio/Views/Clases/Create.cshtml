@model Gimnasio.Models.Clase

@{
    ViewData["Title"] = "Crear Nueva Clase";
}

<div class="container my-4">
    <h2>Crear Nueva Clase</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Nombre">Nombre de la Clase</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ejemplo: Yoga, Crossfit" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Horario">Horario</label>
            <input asp-for="Horario" type="time" class="form-control" />
            <span asp-validation-for="Horario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cupo">Cupo Máximo</label>
            <input asp-for="Cupo" type="number" class="form-control" placeholder="Ejemplo: 20" />
            <span asp-validation-for="Cupo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EntrenadorID">Entrenador</label>
            <select asp-for="EntrenadorID" class="form-control" asp-items="@(new SelectList(ViewBag.Entrenadores, "UsuarioID", "Nombre"))">
                <option value="">-- Seleccione un Entrenador --</option>
            </select>
            <span asp-validation-for="EntrenadorID" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
