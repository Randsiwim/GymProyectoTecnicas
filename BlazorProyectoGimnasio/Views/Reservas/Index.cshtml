@model IEnumerable<Gimnasio.Models.Reserva>

<h2>Gestionar Reservas</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nueva Reserva</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Clase</th>
            <th>Fecha de Reserva</th>
            <th>Tipo de Reserva</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservaID</td>
                <td>@(item.Usuario?.Nombre ?? "Sin cliente")</td>
                <td>@(item.Clase?.Nombre ?? "Sin clase")</td>
                <td>@item.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@item.TipoReserva</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaID" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.ReservaID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
