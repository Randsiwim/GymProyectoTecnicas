@model IEnumerable<Gimnasio.Models.ProgresoUsuario>

<h2>Gestionar Progreso de Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Registrar Progreso</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Métrica</th>
            <th>Valor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProgresoID</td>
                <td>@(item.Usuario?.Nombre ?? "Sin cliente")</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@item.Metrica</td>
                <td>@item.Valor</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ProgresoID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
