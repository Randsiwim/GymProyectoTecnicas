@model Gimnasio.Models.ProgresoUsuario

@{
    ViewData["Title"] = "Registrar Nuevo Progreso";
}

<h2>Registrar Nuevo Progreso</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="UsuarioID" class="form-label">Cliente</label>
        <select asp-for="UsuarioID" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "UsuarioID", "Nombre"))">
            <option value="">Seleccione un Cliente</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="Metrica" class="form-label">Métrica</label>
        <input type="text" asp-for="Metrica" class="form-control" placeholder="Ejemplo: Pecho, Biceps, Piernas" required />
    </div>
    <div class="mb-3">
        <label for="Valor" class="form-label">Valor</label>
        <input type="number" step="0.01" asp-for="Valor" class="form-control" placeholder="Ejemplo: 85.5" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
