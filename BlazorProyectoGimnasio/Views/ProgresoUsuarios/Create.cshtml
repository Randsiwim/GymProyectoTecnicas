@model Gimnasio.Models.ProgresoUsuario

<h2>Registrar Progreso</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UsuarioID" class="control-label">Cliente</label>
        <select asp-for="UsuarioID" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "UsuarioID", "Nombre"))">
            <option value="">Seleccione un cliente</option>
        </select>
        <span asp-validation-for="UsuarioID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Metrica" class="control-label">Métrica</label>
        <input asp-for="Metrica" class="form-control" />
        <span asp-validation-for="Metrica" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor" class="control-label">Valor</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
