@model Gimnasio.Models.ProgresoUsuario

<h2>Eliminar Progreso</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Métrica:</dt>
        <dd class="col-sm-10">@Model.Metrica</dd>

        <dt class="col-sm-2">Valor:</dt>
        <dd class="col-sm-10">@Model.Valor</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ProgresoID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
