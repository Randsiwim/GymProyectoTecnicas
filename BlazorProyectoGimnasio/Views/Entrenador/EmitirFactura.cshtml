@model Gimnasio.Models.Factura

<h2>Emitir Nueva Factura</h2>

<form asp-action="EmitirFactura" method="post">
    <div class="form-group">
        <label for="UsuarioID">Cliente</label>
        <select asp-for="UsuarioID" asp-items="ViewBag.Clientes" class="form-control">
            <option value="">-- Seleccione un Cliente --</option>
        </select>
        <span asp-validation-for="UsuarioID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Monto">Monto</label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Detalle">Detalle</label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
