@model IEnumerable<Gimnasio.Models.ReporteContable>

@{
    ViewData["Title"] = "Reporte Contable";
}

<h2>Reporte Contable</h2>

<form method="get" action="/Reportes/DescargarReporteContable">
    <div class="form-group">
        <label for="fechaInicio">Fecha Inicio:</label>
        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label for="fechaFin">Fecha Fin:</label>
        <input type="date" id="fechaFin" name="fechaFin" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Descargar en PDF</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Monto</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Tipo</td>
                <td>@item.Monto.ToString("C")</td>
                <td>@item.Descripcion</td>
            </tr>
        }
    </tbody>
</table>
