@model IEnumerable<Gimnasio.Models.Usuario>

<h2>Gestionar Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Usuario</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UsuarioID</td>
                <td>@item.Nombre</td>
                <td>@item.Email</td>
                <td>@(item.Rol ?? "Sin rol")</td>
                <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UsuarioID" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.UsuarioID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
