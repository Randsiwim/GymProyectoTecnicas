@model Gimnasio.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>¿Estás seguro de que quieres eliminar este usuario?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol:</dt>
        <dd class="col-sm-10">@Model.Rol</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UsuarioID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
