@page "/reservas/{usuarioId:int}"
@inject ReservaService ReservaService
@inject ClaseService ClaseService
@inject NavigationManager NavigationManager

<h3>Gestión de Reservas</h3>

<table class="table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Clase</th>
            <th>Fecha Reserva</th>
            <th>Tipo Reserva</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in listaReservas)
        {
            <tr @onclick="() => SeleccionarReserva(reserva)" class="@GetRowClass(reserva)" style="cursor:pointer;">
                <td>@reserva.UsuarioNombre</td>
                <td>@reserva.ClaseNombre</td>
                <td>@reserva.FechaReserva.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@reserva.TipoReserva</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" @onclick="VerDetalleReserva">Ver Detalle</button>

@code {
    private List<ReservaViewModel> listaReservas = new();
    private ReservaViewModel reservaSeleccionada;

    protected override async Task OnInitializedAsync()
    {
        listaReservas = await ReservaService.GetReservasAsync();
    }

    private void SeleccionarReserva(ReservaViewModel reserva)
    {
        reservaSeleccionada = reserva;
    }

    private string GetRowClass(ReservaViewModel reserva)
    {
        return reserva == reservaSeleccionada ? "table-active" : string.Empty;
    }

    private void VerDetalleReserva()
    {
        if (reservaSeleccionada != null)
        {
            NavigationManager.NavigateTo($"/reservas/{reservaSeleccionada.ReservaId}");
        }
        else
        {
            Console.WriteLine("Seleccione una reserva para ver el detalle.");
        }
    }
}
