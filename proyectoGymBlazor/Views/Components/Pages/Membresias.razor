@page "/membresias"
@inject MembresiaService MembresiaService
@inject NavigationManager NavigationManager

<h3>Gestión de Membresías</h3>

<table class="table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Tipo</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var membresia in listaMembresias)
        {
            <tr @onclick="() => SeleccionarMembresia(membresia)" class="@GetRowClass(membresia)" style="cursor:pointer;">
                <td>@membresia.UsuarioNombre</td>
                <td>@membresia.Tipo</td>
                <td>@membresia.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@membresia.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@membresia.Estado</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" @onclick="VerDetalleMembresia">Ver Detalle</button>

@code {
    private List<MembresiaViewModel> listaMembresias = new();
    private MembresiaViewModel membresiaSeleccionada;

    protected override async Task OnInitializedAsync()
    {
        listaMembresias = await MembresiaService.GetMembresiasAsync();
    }

    private void SeleccionarMembresia(MembresiaViewModel membresia)
    {
        membresiaSeleccionada = membresia;
    }

    private string GetRowClass(MembresiaViewModel membresia)
    {
        return membresia == membresiaSeleccionada ? "table-active" : string.Empty;
    }

    private void VerDetalleMembresia()
    {
        if (membresiaSeleccionada != null)
        {
            NavigationManager.NavigateTo($"/membresias/{membresiaSeleccionada.MembresiaID}");
        }
        else
        {
            Console.WriteLine("Seleccione una membresía para ver el detalle.");
        }
    }
}
