@page "/membresias"
@inject MembresiaService MembresiaService
@using proyectoGymBlazor.Services
@using proyectoGymBlazor.Model


<h3>Gestión de Membresías</h3>

@if (membresias == null)
{
    <p>Cargando...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Tipo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var membresia in membresias)
            {
                <tr>
                    <td>@membresia.MembresiaID</td>
                    <td>@membresia.UsuarioID</td>
                    <td>@membresia.Tipo</td>
                    <td>@membresia.FechaInicio.ToShortDateString()</td>
                    <td>@membresia.FechaFin.ToShortDateString()</td>
                    <td>@membresia.Estado</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditarMembresia(membresia.MembresiaID)">Editar</button>
                        <button class="btn btn-danger" @onclick="() => EliminarMembresia(membresia.MembresiaID)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-success" @onclick="CrearNuevaMembresia">Crear Nueva Membresía</button>
}

@code {
    private List<Membresia> membresias;

    protected override async Task OnInitializedAsync()
    {
        membresias = await MembresiaService.ObtenerMembresiasAsync();
    }

    private void CrearNuevaMembresia()
    {
        // Redirigir a un formulario para crear una nueva membresía
    }

    private void EditarMembresia(int id)
    {
        // Redirigir a un formulario de edición
    }

    private async Task EliminarMembresia(int id)
    {
        await MembresiaService.EliminarMembresiaAsync(id);
        membresias = await MembresiaService.ObtenerMembresiasAsync();
    }
}
