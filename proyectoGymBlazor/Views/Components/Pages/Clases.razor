@page "/clases"
@inject proyectoGymBlazor.Services.ClaseService ClaseService
@using proyectoGymBlazor.Models

<h3>Gestión de Clases</h3>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Horario</th>
            <th>Entrenador</th>
            <th>Cupo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clase in clasesList)  
        {
            <tr>
                <td>@clase.Nombre</td>
                <td>@clase.Horario.ToString("g")</td>
                <td>@clase.EntrenadorID</td>
                <td>@clase.Cupo</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => EditarClase(clase.ClaseID)">Editar</button>
                    <button class="btn btn-danger" @onclick="() => EliminarClase(clase.ClaseID)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" @onclick="NuevaClase">Nueva Clase</button>

@code {
    private List<Clase> clasesList;  <!-- Cambio aquí -->

    protected override void OnInitialized()
    {
        clasesList = ClaseService.GetClases();  // Aquí también cambiamos el nombre de la variable
    }

    private void NuevaClase()
    {
        // Lógica para mostrar un formulario modal (opcional)
    }

    private void EditarClase(int id)
    {
        // Navegar o abrir el formulario de edición
    }

    private void EliminarClase(int id)
    {
        ClaseService.DeleteClase(id);
        clasesList = ClaseService.GetClases(); // Refrescar la lista
    }
}




