@page "/usuarios"
@inject UsuarioService UsuarioService
@inject NavigationManager NavigationManager

<h3>Gestión de Usuarios</h3>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Fecha Registro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in listaUsuarios)
        {
            <tr @onclick="() => SeleccionarUsuario(usuario)" class="@GetRowClass(usuario)" style="cursor:pointer;">
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" @onclick="VerDetalleUsuario">Ver Detalle</button>

@code {
    private List<UsuarioViewModel> listaUsuarios = new();
    private UsuarioViewModel usuarioSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        listaUsuarios = await UsuarioService.GetUsuariosAsync();
    }

    private void SeleccionarUsuario(UsuarioViewModel usuario)
    {
        usuarioSeleccionado = usuario;
    }

    private string GetRowClass(UsuarioViewModel usuario)
    {
        return usuario == usuarioSeleccionado ? "table-active" : string.Empty;
    }

    private void VerDetalleUsuario()
    {
        if (usuarioSeleccionado != null)
        {
            NavigationManager.NavigateTo($"/usuarios/{usuarioSeleccionado.UsuarioID}");
        }
        else
        {
            Console.WriteLine("Seleccione un usuario para ver el detalle.");
        }
    }
}
